<div class="wrapper-light-blue">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <b>Show starts at: <%= @event.show_start_at %></b>

        <br>

        <b>Schedule: <%= @event.schedule %></b>

        <br>

        <% if policy(@tour).edit? %>
          <%= render 'layouts/modals/modal_edit_event', tour: @tour, event: @event %>
          <%= link_to 'Delete this event', event_path(@event), method: :delete, class: 'btn btn-secondary btn-sm' %>
        <% end %>

        <%# if policy(@tour).edit? %>
          <%#= link_to 'Edit this event', edit_event_path(@event) %>
          <%#= link_to 'Delete this event', event_path(@event), method: :delete %>
        <%# end %>

        <br>

        <%= link_to 'Back to tour', tour_path(@tour), class: "btn btn-link btn-sm" %>

      </div>
    </div>
  </div>
</div>
