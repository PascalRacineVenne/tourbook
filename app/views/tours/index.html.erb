<div class="container">
  <div class="row justify-content-center">

    <div class="col-md-6">
      <% if policy(Tour).create? %>
        <%= link_to "Add a tour", new_tour_path %>
      <% end %>

      <br>
      <br>

      <% @tours.each do |tour| %>
        <h1><%= link_to tour.name, tour_path(tour) %></h1>
        <p><%= tour.artist_name %></p>
        <% if tour.logo.present? %>
          <%= cl_image_tag tour.logo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
