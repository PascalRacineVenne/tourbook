<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>Tours#show</h1>

      <br>
      <br>

      <%= link_to 'Edit this tour', edit_tour_path(@tour) %>
      <%= link_to 'Delete this tour', tour_path(@tour), method: :delete %>

      <h1><%= @tour.name %></h1>
      <p>Artist name: <%= @tour.artist_name %></p>
      <% if @tour.logo.present?%>
        <%= cl_image_tag @tour.logo.key, height: 300, width: 400, crop: :fill %>
      <% end %>

      <br>
      <br>

      <b>Events</b>
      <%= link_to 'Add an event', new_tour_event_path(@tour) %>

      <br>
      <br>

      <% @events.each do |event| %>
        <b><%= link_to event.show_start_at, event_path(event) %></b>
        <i><%= event.schedule %></i>
        <br>
        <br>
      <% end %>

      <br>
      <br>

      <b>Tour members</b>

      <br>
      <br>

      <% @tour_members.each do |tour_member| %>
        <p><%= tour_member.job_title %> - User_id: <%= tour_member.user_id %></p>
        <br>
        <br>
      <% end %>

      <br>
      <br>

      <%= link_to 'Back', tours_path %>

    </div>
  </div>
</div>
