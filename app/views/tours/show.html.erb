<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>Tours#show</h1>

      <% if policy(@tour).edit? %>
        <%= link_to 'Edit Details', edit_tour_path(@tour), class: 'btn btn-secondary' %>
      <% end %>
      <% if policy(@tour).destroy? %>
        <%= link_to 'Delete this tour', tour_path(@tour), method: :delete, class: 'btn btn-secondary' %>
      <% end %>

      <br>
      <br>

      <h1><%= @tour.name %></h1>
      <p>Artist name: <%= @tour.artist_name %></p>
      <% if @tour.logo.present?%>
        <%= cl_image_tag @tour.logo.key, height: 300, width: 400, crop: :fill %>
      <% end %>

      <br>
      <br>

      <b>Events</b>
      <% if policy(@tour).edit? %>
        <%= link_to 'Add an event', new_tour_event_path(@tour) %>
      <% end %>

      <br>
      <br>

      <% @events.each do |event| %>
        <b><%= link_to event.show_start_at, event_path(event) %></b>
        <i><%= event.schedule %></i>
        <br>
        <br>
      <% end %>

      <br>
      <br>

      <b>Tour members</b>

      <br>
      <br>

      <% @tour_members.each do |tour_member| %>
        <p><%= tour_member.job_title %> - <%= tour_member.user.full_name ? tour_member.user.full_name : tour_member.user.email %></p>
        <br>
        <br>
      <% end %>

      <br>
      <br>

      <%= link_to 'Back', tours_path %>

    </div>
  </div>
</div>
