<%= simple_form_for(@tour) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Name:' %>
    <%= f.input :artist_name, label: 'Artist name:' %>
    <%= f.input :logo_url, label: 'Logo URL:' %>
  </div>
  <%= f.simple_fields_for(:tour_members) do |ftm| %>
    <%= ftm.input :job_title, label: 'Job title:' %>
    <%= ftm.association :user,label: 'User:' %>
  <% end %>


  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, class: 'btn btn-secondary' %>
  </div>
<% end %>
