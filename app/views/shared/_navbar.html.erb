<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <%= image_tag "icons/icon_menu.png" %>
    <!-- <span class="navbar-toggler-icon"></span> -->
  </button>

  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logos/tourbook_logo_2.png" %>
  <% end %>

  <% if user_signed_in? %>

    <%= link_to user_path(current_user) do %>
      <% if current_user.avatar.present? %>
        <%= cl_image_tag current_user.avatar.key, crop: :fill, class: "avatar" %>
      <% else %>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% end %>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
      </li>
      <li class="nav-item dropdown">
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </li>
    </ul>
  <% else %>
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
    </ul>
  <% end %>
  </div>
</div>
