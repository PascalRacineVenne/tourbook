<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logos/tourbook_logo_2.png" %>
  <% end %>

  <%#= link_to 'notifs', notifications_path %>
  <%#= link_to notifications_path do %>
    <%#= image_tag "icons/icon_notif.svg", class: 'icon-round' %>
  <%# end %>

  <% if user_signed_in? %>
      <% if current_user.avatar.present? %>
        <%= cl_image_tag current_user.avatar.key,
          crop: :fill,
          class: "avatar-bordered dropdown-toggle",
          id: "navbarDropdown",
          data: { toggle: "collapse",
          target: "#navbarSupportedContent" },
          'aria-haspopup': true,
          'aria-expanded': false
        %>
      <% else %>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier",
          class: "avatar-bordered dropdown-toggle",
          id: "navbarDropdown",
          data: { toggle: "collapse",
          target: "#navbarSupportedContent" },
          'aria-haspopup': true,
          'aria-expanded': false
        %>
      <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
        </li>
        <li class="nav-item dropdown">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </li>
      </ul>
    </div>

  <% else %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      </ul>
  <% end %>

</div>

