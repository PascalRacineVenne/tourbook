<%= simple_form_for([@tour, @broadcast]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :broadcastable_id, collection: @tour.events, label: 'Broadcast to:', prompt: 'whole tour' %>
    <%= f.input :content, as: :rich_text_area %>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-sm">Close</button>
    <%= f.button :submit, class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>
