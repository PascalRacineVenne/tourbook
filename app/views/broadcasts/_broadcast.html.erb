<% if broadcast.broadcastable.blank? %>
<div class="card-event">
  <div class="card-event-block">
    <div class="row">
      <div class="col-2" id="event">
        <img src="https://images.unsplash.com/photo-1567942712661-82b9b407abbf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1334&q=80" class="avatar-square" />
      </div>
      <div class="col-8" id="event-venue">
        <p><strong>this event or tour was deleted by the owner</strong></p>
      </div>
    </div>
  </div>
</div>

<% elsif  broadcast.broadcastable_type == 'Tour' %>
  <%= link_to tour_path(broadcast.broadcastable) do %>

    <div class="card-event">
      <div class="card-event-block">
        <div class="row">

          <div class="col-2" id="event">
            <% if broadcast.broadcastable.logo.attached? %>
              <%= cl_image_tag broadcast.broadcastable.logo.key, crop: :fill, class: 'avatar-square' %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1567942712661-82b9b407abbf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1334&q=80" class="avatar-square" />
            <% end %>
          </div>
          <div class="col-8" id="event-venue">
            <p><strong><%= broadcast.broadcastable.name %></strong> -- <%= broadcast.name %></p>
            <%= broadcast.content %>
          </div>
          <div class="col-2" id="event-photo">
              <%= image_tag "icons/icon_arrow.svg", alt: "alttext", class: 'icon-blue' %>
          </div>

        </div>
      </div>
    </div>
  <% end %>

<% else %>
  <%= link_to event_path(broadcast.broadcastable) do %>

    <div class="card-event">
      <div class="card-event-block">
        <div class="row">

          <div class="col-2" id="event">
            <img src="https://images.unsplash.com/photo-1567942712661-82b9b407abbf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1334&q=80" class="avatar-square" />
          </div>

          <div class="col-8" id="event-venue">
            <p><strong><%= broadcast.broadcastable.tour.name %></strong> -- <%= broadcast.broadcastable.show_start_at.strftime('%b %d') %>, <%= broadcast.broadcastable.city %></p>
            <p><%= broadcast.name %></p>
            <p><%= broadcast.content %></p>
          </div>

          <div class="col-2" id="event-photo">
              <%= image_tag "icons/icon_arrow.svg", alt: "alttext", class: 'icon-blue' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
