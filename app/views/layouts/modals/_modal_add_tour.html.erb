<!-- ADD TOUR plsu icon -->
<%= image_tag "icons/icon_plus.svg",
  id: 'plus',
  class: 'icon-round',
  data:  { toggle: "modal",
  target: "#addTourModal"
 } %>

<div class="modal fade" id="addTourModal" tabindex="-1" role="dialog" aria-labelledby="addTourModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-content-color">

      <div class="modal-body">

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <a class="btn btn-primary btn-sm" data-toggle="collapse" href="#multiCollapseAddTour" role="button" aria-expanded="false" aria-controls="multiCollapseAddTour">Step 1: Create Tour</a>
        <a class="btn btn-primary btn-sm" data-toggle="collapse" href="#multiCollapseAddEvent" role="button" aria-expanded="false" aria-controls="multiCollapseAddEvent">Step 2: Add Event</a>
        <a class="btn btn-primary btn-sm" data-toggle="collapse" href="#multiCollapseAddMember" role="button" aria-expanded="false" aria-controls="multiCollapseAddMember">Step 3: Invite Members</a>

        <%= simple_form_for(@tour) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="row">
            <div class="col">
              <div class="collapse show multi-collapse" id="multiCollapseAddTour">
                <div class="card card-body">
                  <div class="form-inputs">
                    <%= f.input :name, label: 'Tour name' %>
                    <%= f.input :artist_name, label: 'Artist name' %>
                    <%= f.input :logo, as: :file %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="collapse multi-collapse" id="multiCollapseAddEvent">
                <div class="card card-body">
                  <div class="form-inputs">
                    <%= f.simple_fields_for(:events) do |fe| %>
                      <%= render 'event_fields', f: fe %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="collapse multi-collapse" id="multiCollapseAddMember">
                <div class="card card-body">
                  <div class="form-inputs">
                      <%= fe.simple_fields_for(:tour_members) do |ftm| %>
                        <%= ftm.input :job_title, label: 'Job title:' %>
                        <%= ftm.input :user_id, collection: User.all, label: 'User:' %>
                        <%= link_to_remove_association 'Remove this tour member', ftm %>
                        <%= render 'tour_member_fields', f: ftm %>
                      <% end %>
                      <div class="links"><%= link_to_add_association 'Add a member', fe, :tour_members %></div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="modal-footer sticky-bottom">
            <%= f.button :submit, class: 'btn btn-primary btn-sm', value: 'Submit' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
