  id: 'edit',
  class: 'icon-round',
  data:  { toggle: "modal",
   target: "#editTourModal"
 } %>

<!-- <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#editTourModal">
  Edit this tour
</button> -->

<div class="modal fade" id="editTourModal" tabindex="-1" role="dialog" aria-labelledby="editTourModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-content-color">
      <div class="modal-header">
        <h2 class="modal-title" id="editTourModalTitle"><%= @tour.name %> - <%= @tour.artist_name %></h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <%# <span aria-hidden="true">&times;</span> %>
          <%= image_tag "icons/icon_esc.svg", alt: "alttext", class: '' %>
        </button>
      </div>
      <div class="modal-body">
        <h1 class="pb-3"> Edit Tour </h1>
        <%= simple_form_for(@tour) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :name, label: 'Tour Name' %>
            <%= f.input :artist_name, label: 'Artist Name' %>
            <%= f.input :logo, as: :file %>
          </div>

          <div class="modal-footer">
            <%= f.button :submit, class: 'btn btn-primary' %>
            <%= link_to 'Delete this tour', tour_path(@tour), method: :delete, class: 'btn delete-button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
