<%#= image_tag "icons/icon_notif.svg",
  id: 'notif',
  class: 'icon-round',
  data:  { toggle: "modal",
  target: "#notificationsIndexModal"
 } %>

<div class="modal fade" id="notificationsIndexModal" tabindex="-1" role="dialog" aria-labelledby="notificationsIndexModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-content-color">
      <div class="modal-header">
        <h2 class="modal-title" id="notificationsIndexModalTitle">Notifications</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <%# <span aria-hidden="true">&times;</span> %>
          <%= image_tag "icons/icon_esc.svg", alt: "alttext", class: '' %>
        </button>
      </div>
      <div class="modal-body">
      

        <%= render current_user.notifications %>

      </div>
    </div>
  </div>
</div>
