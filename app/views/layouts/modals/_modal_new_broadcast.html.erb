<div class="modal fade" id="newBroadcastModal" tabindex="-1" role="dialog" aria-labelledby="newBroadcastModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-content-color">
      <div class="modal-header">
        <h2 class="modal-title" id="newBroadcastModalTitle"><%= @tour.name %> - <%= @tour.artist_name %></h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1 class="pb-3"> Send Broadcast </h1>
        <%= simple_form_for([@tour, @broadcast]) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :broadcastable_id, collection: @tour.events, label: 'Broadcast to:', prompt: 'whole tour' %>
            <%= f.input :content, as: :rich_text_area %>
          </div>

          <div class="modal-footer">
            <%= f.button :submit, class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
