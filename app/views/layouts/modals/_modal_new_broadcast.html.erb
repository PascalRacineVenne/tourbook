<div class="modal fade" id="newBroadcastModal" tabindex="-1" role="dialog" aria-labelledby="newBroadcastModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-content-color">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <%# <span aria-hidden="true">&times;</span> %>
          <%= image_tag "icons/icon_esc.svg", alt: "alttext", class: '' %>
        </button>
      </div>
      <div class="modal-body">
        <div class="card card-body">
          <h1 class="pb-3"> Create Notification </h1>
          <%= simple_form_for([@tour, @broadcast]) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
              <%= f.input :broadcastable_id, collection: @tour.events, label: 'To :', prompt: 'whole tour' %>
              <%= f.input :name, label: 'Title' %>
              <%= f.input :content, as: :rich_text_area %>
            </div>

            <div class="modal-footer">
              <%= f.button :submit, class: 'btn btn-primary', value: 'Send' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
