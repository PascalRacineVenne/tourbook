<!-- Add event plus icon -->

<%#= image_tag "icons/icon_plus.svg",
  id: 'plus',
  class: 'icon-round',
  data:  { toggle: "modal",
  target: "#addEventModal"
 } %>

<div class="modal fade" id="addEventModal" tabindex="-1" role="dialog" aria-labelledby="addEventModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-content-color">
      <div class="modal-header">
        <h2 class="modal-title" id="addEventModalTitle"><%= @tour.name %> feat. <%= @tour.artist_name %></h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1 class="pb-3"> Add Event </h1>
        <%= simple_form_for([@tour, @event]) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :venue, label: 'Venue' %>
            <%= f.input :city, label: 'City' %>
            <%= f.input :show_start_at,
              as: :datetime,
              label: 'Show starts at',
              class: 'form-control-datetime',
              html5: true,
              input_html: { value: "#{ (DateTime.now.next_week.noon + 8.hours).strftime("%Y-%m-%d#{'T'}%H:%M:%S") }" }
            %>
            <%= f.input :schedule, class: 'schedule', as: :rich_text_area, label: 'Schedule', placeholder: 'Text goes here' %>
          </div>

          <div class="modal-footer">
            <%= f.button :submit, class: 'btn btn-primary', value: 'Submit' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
