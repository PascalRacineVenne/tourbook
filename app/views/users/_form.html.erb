<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :full_name, label: 'Name:' %>
    <%= f.input :nickname, label: 'Nickname:' %>
    <%= f.input :email, label: 'Email:' %>
    <%= f.input :phone, label: 'Phone Number:' %>
    <%= f.input :description, label: 'Bio:' %>
    <%= f.input :avatar, as: :file %>
    <!-- uncomment below when cloudinary installed -->
    <%#= f.input :photo, as: :file, label: 'Avatar:' %>
    <%= f.association :skills, as: :check_boxes, label: 'Job skills:' %>
  </div>

  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, class: 'btn btn-warning' %>
  </div>
<% end %>
