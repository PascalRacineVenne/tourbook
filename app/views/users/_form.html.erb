<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name, label: 'First Name:' %>
    <%= f.input :last_name, label: 'Last Name:' %>
    <%= f.input :nickname, label: 'Nickname:' %>
    <%= f.input :email, label: 'Email:' %>
    <%= f.input :phone, label: 'Phone Number:' %>
    <%= f.input :description, label: 'Bio:' %>
    <!-- uncomment below when cloudinary installed -->
    <%#= f.input :photo, as: :file, label: 'Avatar:' %>
  </div>

  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, class: 'btn btn-warning' %>
  </div>
<% end %>
